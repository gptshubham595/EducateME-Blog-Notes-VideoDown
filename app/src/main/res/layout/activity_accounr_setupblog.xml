<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black5"
    tools:context=".blogapp.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarSetup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:minHeight="?android:attr/actionBarSize"

        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
<RelativeLayout
    android:layout_width="match_parent"
    android:id="@+id/profiler"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.502"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
>    <ImageView
        android:layout_width="match_parent"
        android:layout_marginTop="-150dp"
        android:background="@drawable/out"
        android:layout_height="wrap_content"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:src="#0A87BE"
        android:layout_centerHorizontal="true"
        android:layout_height="200dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="180dp"
        android:id="@+id/profile"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/user"
        android:layout_height="180dp"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_marginTop="150dp"
        android:id="@+id/edit"
        android:backgroundTint="#000000"
        app:srcCompat="@android:drawable/ic_menu_edit"
        android:layout_centerHorizontal="true"
        android:layout_height="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:layout_below="@id/profile"
        android:id="@+id/content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textStyle="bold"
                android:textSize="20sp"
                android:typeface="sans"
                android:textColor="#03A9F4"
                />
            <EditText
                android:textStyle="bold"
                android:typeface="sans"
                android:textColor="#03A9F4"
                android:layout_width="match_parent"
                android:drawableRight="@android:drawable/ic_menu_edit"
                android:text="Name"
                android:inputType="textPersonName"
                android:gravity="center"
                android:textSize="20sp"
                android:id="@+id/name"
                android:paddingLeft="18dp"
                android:layout_height="wrap_content"/></LinearLayout>/

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:typeface="sans"
                android:textColor="#03A9F4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age:"
                android:textSize="20sp"
                />
            <EditText
                android:textStyle="bold"
                android:drawableRight="@android:drawable/ic_menu_edit"
                android:typeface="sans"
                android:textColor="#03A9F4"
                android:layout_width="match_parent"
                android:text="age"
                android:maxLength="3"
                android:minEms="0"
                android:maxEms="99"
                android:gravity="center"
                android:paddingLeft="27dp"
                android:textSize="20sp"
                android:id="@+id/age"
                android:layout_height="wrap_content"/></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:typeface="sans"
                android:textColor="#03A9F4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hostel:"
                android:textSize="20sp"
                />
            <EditText
                android:textStyle="bold"
                android:drawableRight="@android:drawable/ic_menu_edit"
                android:typeface="sans"
                android:textColor="#03A9F4"
                android:layout_width="match_parent"
                android:text="hostel"
                android:gravity="center"
                android:paddingLeft="27dp"
                android:textSize="20sp"
                android:id="@+id/hostel"
                android:layout_height="wrap_content"/></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:typeface="sans"
                android:textColor="#03A9F4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Roll No:"
                android:textSize="20sp"
                />
            <EditText
                android:textStyle="bold"
                android:drawableRight="@android:drawable/ic_menu_edit"
                android:typeface="sans"
                android:textColor="#03A9F4"
                android:layout_width="match_parent"
                android:text="roll"
                android:gravity="center"
                android:paddingLeft="27dp"
                android:textSize="20sp"
                android:id="@+id/roll"
                android:layout_height="wrap_content"/></LinearLayout>


    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:text="SAVE DETAILS"
        android:layout_below="@id/content"
        android:layout_marginTop="45dp"
        android:background="@drawable/shape4"
        android:id="@+id/submit"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>

</RelativeLayout>

    <ProgressBar
        android:id="@+id/AccountSettingsBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:indeterminate="true"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarSetup" />

</androidx.constraintlayout.widget.ConstraintLayout>