<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawer"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_margin="81dp"
            android:id="@+id/down"
            android:text="Download videos"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:id="@+id/blog"
            android:layout_above="@id/down"
            android:text="Blog"
            android:layout_height="wrap_content"/>

        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="start"
        android:layout_height="match_parent">

           <android.support.design.widget.NavigationView
            android:layout_width="wrap_content"
            app:headerLayout="@layout/header"
            android:id="@+id/nav"
            android:background="#5603A9F4"
            android:layout_height="match_parent"
            app:itemTextColor="@android:color/white"
            app:itemIconTint="@android:color/white"
            app:menu="@menu/menu"
            /></RelativeLayout>
</androidx.core.widget.DrawerLayout>